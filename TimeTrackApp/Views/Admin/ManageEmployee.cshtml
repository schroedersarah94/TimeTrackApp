@model IEnumerable<TimeTrackingApplication.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<!-- THIS ADMIN PAGE DISPLAYS ALL CURRENT EMPLOYEES, AND GIVES THE ADMIN PERMISSION TO ADD, EDIT, AND DELETE THEM -->

<h1>Manage Employees</h1>

<p>
    <a asp-action="Create">Create New Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PTO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClockedIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PTO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClockedIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
